<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Items <a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
            <hr />
            {{#if items.length}}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>Item Date</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Published</th>
                            <th></th> <!-- Empty header for the delete button -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{formatDate this.itemDate}}</td>
                            <td>${{this.price}}</td>
                            <td>{{this.category.category}}</td>
                            <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                            <td><a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="alert alert-warning" role="alert">
                No items found.
            </div>
            {{/if}}
        </div>
    </div>
</div>
