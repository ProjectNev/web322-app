<div class="row">
   <aside class="col-md-3">
      <h2>About</h2>
      <p>This is the Project Store. We sell good items at a reasonable and cheap price!</p>
   </aside>
   <section class="main col-md-9">
      <article>
         <div class="row">
            <div class="col-12">
               <h2>Add Item</h2>
               <br />
               <form method="post" action="/items/add" enctype="multipart/form-data">
                  <fieldset>
                     <legend>Feature Image</legend>
                     <div class="row">
                        <div class="col-md-12">
                           <div class="form-group">
                              <input class="form-control" id="featureImage" name="featureImage" type="file" />
                           </div>
                        </div>
                     </div>
                  </fieldset>
                  <br />
                  <fieldset>
                     <legend>Post Content</legend>
                     <div class="row">
                        <div class="col-md-12">
                           <div class="form-group">
                              <label for="title">Item Name:</label>
                              <input class="form-control" id="title" name="title" type="text" />
                           </div>
                           <div class="form-group">
                              <label for="body">Description:</label>
                              <textarea class="form-control" id="body" name="body" rows=15></textarea>
                           </div>
                           <div class="form-group">
                              <label for="category">Category:</label>
                              {{#if categories}}
                              <select class="form-control" name="category" id="category">
                                 <option value="">Select Category</option>
                                 {{#each categories}}
                                 <option value="{{this.id}}">{{this.category}}</option>
                                 {{/each}}
                              </select>
                              {{else}}
                              <div>No Categories</div>
                              {{/if}}
                           </div>
                           <div class="form-group">
                              <label for="published">Visibility:</label>
                              <div class="checkbox">
                                 <label>
                                 <input type="checkbox" name="published" id="published"> Published
                                 </label>
                              </div>
                           </div>
                        </div>
                     </div>
                  </fieldset>
                  <hr />
                  <input type="submit" class="btn btn-primary pull-right" value="Add Item" /><br /><br /><br />
               </form>
            </div>
         </div>
      </article>
   </section>
</div>
